{
  "name": "wobble",
  "version": "1.4.0",
  "description": "Wobble is a tiny spring simulation library based on the equations of motion governing damped harmonic oscillators.",
  "repository": "https://github.com/skevy/wobble",
  "author": "Adam Miskiewicz <adam@sk3vy.com>",
  "license": "MIT",
  "main": "./dist/module/index.js",
  "types": "./dist/module/index.d.ts",
  "scripts": {
    "dev": "concurrently \"yarn watch\" \"cd demos && yarn start\"",
    "test": "tslint -p . --format codeFrame && tsc --noEmit && jest --coverage",
    "posttest": "codecov -f coverage/*.json",
    "clean": "rm -rf ./dist/",
    "watch": "tsc -w",
    "build": "tsc",
    "dist-es": "ROLLUP_CONFIG=es rollup -c --output.file dist/wobble.es.js",
    "dist-cjs": "ROLLUP_CONFIG=cjs rollup -c --output.format cjs --output.file dist/wobble.cjs.js",
    "dist-browser": "ROLLUP_CONFIG=browser rollup -c --output.format iife --output.file dist/wobble.browser.js",
    "dist": "yarn run clean; concurrently \"yarn build\" \"yarn dist-es\" \"yarn dist-cjs\" \"yarn dist-browser\"",
    "prepublish": "yarn dist",
    "precommit": "lint-staged"
  },
  "files": [
    "dist",
    "wobble.d.ts"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "setupFiles": [
      "./jest/rAF.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "mapCoverage": true,
    "timers": "fake"
  },
  "lint-staged": {
    "**/*.+(ts|tsx)": [
      "tslint --format codeFrame"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/lolex": "^2.1.1",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "codecov": "^3.0.0",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "jest": "^22.1.1",
    "lint-staged": "^6.0.0",
    "lolex": "^2.3.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.54.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.10.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "temp-dir": "^1.0.0",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "uglify-es": "^3.3.7"
  }
}